# ========================================
# Application
# ========================================
APP_NAME="Highlight ERP"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# ========================================
# Database (PostgreSQL)
# ========================================
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=highlight_erp
DB_USERNAME=postgres
DB_PASSWORD=your_secure_database_password

# ========================================
# Redis
# ========================================
REDIS_HOST=redis
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379

CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# ========================================
# Mail Configuration
# ========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# Docker Ports
# ========================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
DB_PORT=5432
REDIS_PORT=6379

# ========================================
# Frontend
# ========================================
VITE_API_URL=https://your-domain.com
