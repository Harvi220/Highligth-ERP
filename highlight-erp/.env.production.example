APP_NAME="Highlight ERP"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://highlight-erp.zennex.ru

# Сгенерировать через: php artisan key:generate
APP_KEY=

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Подключение к MySQL на сервере k3s
DB_CONNECTION=mysql
DB_HOST=mysql-service
DB_PORT=3306
DB_DATABASE=highlight_erp
DB_USERNAME=highlight_erp_user
DB_PASSWORD=ЗАМЕНИТЬ_НА_РЕАЛЬНЫЙ_ПАРОЛЬ

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Настройки почты (если нужно)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@highlight-erp.zennex.ru"
MAIL_FROM_NAME="${APP_NAME}"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=highlight-erp.zennex.ru
SESSION_DOMAIN=.zennex.ru

# Настройки для frontend
VITE_APP_NAME="${APP_NAME}"
