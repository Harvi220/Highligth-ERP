            "post": {
                "tags": [
                    "Администратор - Документы"
                ],
                "summary": "Загрузка нового документа",
                "operationId": "storeDocument",
                "requestBody": {
                    "description": "Данные для загрузки документа. Используйте multipart/form-data.",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "title",
                                    "file"
                                ],
                                "properties": {
                                    "title": {
                                        "description": "Название документа",
                                        "type": "string"
                                    },
                                    "file": {
                                        "description": "Файл документа (PDF, DOCX, XLSX)",
