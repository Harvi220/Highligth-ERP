    "components": {
        "schemas": {
            "StoreUserRequest": {
                "title": "StoreUserRequest",
                "description": "Данные для создания нового сотрудника",
                "required": [
                    "last_name",
                    "first_name",
                    "position",
                    "phone",
                    "password"
                ],
                "properties": {
                    "last_name": {
                        "description": "Фамилия",
                        "type": "string",
                        "example": "Петров"
                    },
                    "first_name": {
                        "description": "Имя",
                        "type": "string",
                        "example": "Петр"
                    },
                    "patronymic": {
                        "description": "Отчество",
                        "type": "string",
                        "example": "Петрович",
                        "nullable": true
                    },
                    "position_id": {
                        "description": "ID должности",
                        "type": "integer",
                        "example": "1"
                    },
                    "phone": {
                        "description": "Номер телефона (логин)",
                        "type": "string",
                        "example": "79991234502"
                    },
                    "password": {
                        "description": "Пароль (минимум 8 символов)",
                        "type": "string",
                        "format": "password",
                        "example": "password123"
                    },
                    "documents": {
                        "description": "Массив ID документов для назначения",
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "example": [
                            1,
                            2
                        ]
                    }
                },
                "type": "object"
            },
            "UpdateUserRequest": {
                "title": "UpdateUserRequest",
                "description": "Данные для обновления сотрудника",
                "required": [
                    "last_name",
                    "first_name",
                    "position",
                    "phone"
                ],
                "properties": {
                    "last_name": {
                        "description": "Фамилия",
                        "type": "string",
                        "example": "Петров"
                    },
                    "first_name": {
                        "description": "Имя",
                        "type": "string",
                        "example": "Петр"
                    },
                    "patronymic": {
                        "description": "Отчество",
                        "type": "string",
                        "example": "Петрович",
                        "nullable": true
                    },
                    "position": {
                        "description": "Должность",
                        "type": "string",
                        "example": "Старший повар"
                    },
                    "phone": {
                        "description": "Номер телефона (логин)",
                        "type": "string",
                        "example": "79991234502"
                    },
                    "password": {
                        "description": "Пароль (минимум 8 символов)",
                        "type": "string",
                        "format": "password",
                        "example": "password123",
                        "nullable": true
                    },
                    "documents": {
                        "description": "Массив ID документов для назначения",
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "example": [
                            1,
                            2
                        ]
                    }
                },
                "type": "object"
            },
            "DocumentStatus": {
                "title": "Document Status",
                "description": "Статус одного документа в списке статистики",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Правила компании"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "assigned",
                            "read"
                        ],
                        "example": "read"
                    }
                },
                "type": "object"
            },
            "UserStatistics": {
                "title": "User Statistics",
                "description": "Статистика по документам для одного сотрудника",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
